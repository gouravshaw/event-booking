# AWS
aws_region        = "eu-west-2"
ec2_instance_type = "t3.medium"
ec2_key_name      = "your-key-pair-name"
allowed_ssh_cidr  = "YOUR_IP/32"

# Project
project_name = "event-booking"
environment  = "prod"

# Alerts
alert_email = "your-email@example.com"

